<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista formulario extendida para compañías -->
    <record id="view_company_form_geo" model="ir.ui.view">
        <field name="name">res.company.form.geo</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Asignación Geográfica" name="geographic_assignment">
                    <group>
                        <group string="Configuración General">
                            <field name="is_geographic_assignment"/>
                            <field name="assignment_priority" invisible="not is_geographic_assignment"/>
                        </group>
                    </group>
                    
                    <group invisible="not is_geographic_assignment">
                        <group string="Países de Servicio">
                            <field name="service_country_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Estados/Provincias">
                            <field name="service_state_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    
                    <group invisible="not is_geographic_assignment">
                        <group string="Ciudades de Servicio">
                            <field name="service_cities" placeholder="Ej: Madrid, Barcelona, Valencia (separadas por comas)"/>
                        </group>
                    </group>
                    
                    <div class="alert alert-info" role="alert" invisible="not is_geographic_assignment">
                        <strong>Información:</strong> Los usuarios se asignarán automáticamente a esta compañía si su ubicación coincide con los criterios definidos. 
                        La prioridad más baja (menor número) tiene precedencia en caso de múltiples coincidencias.
                    </div>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Menú para gestión de compañías geográficas -->
    <record id="action_company_geographic" model="ir.actions.act_window">
        <field name="name">Configuración Geográfica</field>
        <field name="res_model">res.company</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_geographic_assignment', '=', True)]</field>
        <field name="context">{'default_is_geographic_assignment': True}</field>
    </record>

    <menuitem id="menu_company_geographic"
              name="Asignación Geográfica"
              parent="base.menu_administration"
              action="action_company_geographic"
              sequence="90"/>

</odoo> 